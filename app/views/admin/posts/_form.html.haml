= form_for [:admin, @post] do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, "Titre"
    = f.text_field :title
  .field
    = f.label :content, "Contenu"
    = f.text_area :content
  .actions
    = f.submit 'Enregistrer'
