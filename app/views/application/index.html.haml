.span12{style: "background-color:cyan; text-align: center; margin:auto;"}
  = render "header"

.span1
  = link_to image_tag('left-arrow.png'), previous_path, :class => 'arrow-link'
.span9
  - unless @example.blank?
    .headline= @example.headline
    .excerpt= @example.excerpt

    .example-info
      .section
        %label{:class => 'control-label'} Référence
        = link_to @example.link.sub(/^http:\/\//,'').sub(/[w.]*/,''), @example.link

      .section
        %label Raisons de la honte
        - @example.reasons.each do |reason|
          %p= I18n.t reason.label

.span1
  = link_to image_tag('right-arrow.png'), next_path, :class => 'arrow-link'
