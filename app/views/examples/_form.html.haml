= form_for @example do |f|
  -if @example.errors.any?
    #error_explanation
      %h2= "#{pluralize(@example.errors.count, "erreur")} se sont produites:"
      %ul
        - @example.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :headline, 'Résumé'
    = f.text_area :headline
  .field
    = f.label :excerpt, 'Extrait'
    = f.text_area :excerpt
  .field
    = f.label :link, 'Lien'
    = f.text_field :link
  .actions
    %label
    = f.submit 'Soumettre'
